<resources>
    <style name="AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="AppThemeLight" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>
    
    <style name="AppThemeDark" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@color/darkColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="android:colorAccent">@color/darkColorAccent</item>
        <item name="android:colorControlHighlight">@color/darkColorControlHighlight</item>
        <item name="android:colorControlNormal">@color/darkColorControlNormal</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>
</resources>
